<div class="container text-left mt-4">
  <h1>All restaurants</h1>
  <%= link_to '+Add new restaurant', new_restaurant_path %>
  <% @restaurants.each do |restaurant| %>
    <h3 class="text-left mt-2"><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
    <p class="text-left"><%= restaurant.address %></p>
    <p class="text-left"><%= restaurant.category %></p>
  <% end %>
</div>
